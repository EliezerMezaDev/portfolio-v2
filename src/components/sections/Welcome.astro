---
import { Icon } from "astro-icon/components";

import Section from "../../layouts/Section.astro";
---

<Section styles="justify-center pb-[0px]">
  <div
    class="w-full max-w-[1024px] grid grid-cols-[1fr] lg:grid-cols-[400px_1fr] md:grid-cols-[300px_1fr]"
  >
    <picture
      class="place-self-center lg:w-[300px] w-[250px] aspect-square transition-all overflow-hidden flex items-center justify-center"
    >
      <img id="portraid" src="images/me.jpg" alt="portraid" />
    </picture>

    <div class="grid grid-cols-1 content-start">
      <a
        href="https://www.linkedin.com/in/eliezer-a-meza-7a1b882b9/"
        target="_blank"
        rel="noopener"
        class="justify-self-center flex items-center transition mb-4 md:justify-center md:hover:scale-105 md:justify-self-end"
      >
        <div class="flex items-center">
          <span
            class="relative inline-flex overflow-hidden rounded-full p-[1px]"
          >
            <div
              class="inline-flex items-center justify-center w-full px-3 py-1 text-sm text-green-900 bg-green-200 border border-green-400 rounded-full cursor-pointer backdrop-blur-3xl whitespace-nowrap"
            >
              Disponible para trabajar
            </div>
          </span>
        </div>
      </a>

      <div class="flex flex-col">
        <h1 class="mb-2 text-4xl font-medium tracking-tight text-purple-700">
          Hey, soy <strong class="text-purple-900 font-bold"
            >Eliezer Meza</strong
          >
        </h1>
        <p class="text-purple-700">
          +4 años de experiencia. <strong class="text-purple-900 font-bold"
            >Desarrollador de software</strong
          > de Nueva Esparta, Venezuela.
        </p>

        <div class="mt-4">
          <a
            href="mailto:eliezermeza.dev@gmail.com"
            target="_blank"
            rel="noopener noreferrer"
            role="link"
            class="inline-flex items-center justify-center gap-2 px-4 py-1 text-purple-800 bg-purple-100 border border-lite-300 rounded-full transition hover:bg-purple-200 hover:text-purple-900 hover:scale-[1.05]"
          >
            <Icon name="mail" />

            Contáctame
          </a>

          <a
            href="https://www.linkedin.com/in/eliezer-a-meza-7a1b882b9/"
            target="_blank"
            rel="noopener noreferrer"
            role="link"
            class="inline-flex items-center justify-center gap-2 px-4 py-1 text-purple-800 bg-purple-100 border border-lite-300 rounded-full transition hover:bg-purple-200 hover:text-purple-900 hover:scale-[1.05]"
          >
            <Icon name="linkedin" />

            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </div>
</Section>

<style>
  #portraid {
    position: relative;

    width: calc(100% - 20px);
    height: calc(100% - 20px);

    animation: 10s blobShape infinite;
  }

  #portraid::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);

    animation: 5s revele forwards;
  }

  @keyframes blobShape {
    0%,
    100% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      transform: translate3d(0, 0, 0) rotateZ(0.01deg);
    }
    34% {
      border-radius: 80% 50% 60% 40% / 30% 70% 60% 60%;
      transform: translate3d(0, 5px, 0) rotateZ(0.01deg);
    }
    50% {
      transform: translate3d(0, 0, 0) rotateZ(0.01deg);
    }
    67% {
      border-radius: 50% 70% 50% 60% / 40% 50% 50% 50%;
      transform: translate3d(0, -3px, 0) rotateZ(0.01deg);
    }
  }

  @keyframes revele {
    100% {
      backdrop-filter: blur(0px);
      background: transparent;
    }
  }
</style>
