---
const { title, subtitle = "" } = Astro.props;
---

<section
  class="max-w-[1280px] w-full min-h-screen mx-auto p-4 flex items-center justify-start flex-col gap-4 border"
>
  {
    title !== "" && (
      <header class="w-full flex justify-center items-center flex-col border">
        <h2 class="text-6xl text-purple-900 font-bold">{title}</h2>
        {subtitle !== "" && <h3 class="text-4xl text-purple-700">asd</h3>}
      </header>
    )
  }

  <div class="w-full p-4 flex justify-center border">
    <slot />
  </div>
</section>
