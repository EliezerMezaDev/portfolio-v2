---
interface Props {
  title?: string;
  subtitle?: string;
  styles?: string;
}

const { title, subtitle = "", styles = "" } = Astro.props;
---

<section
  class:list={[
    "container w-full max-w-[1024px] min-h-[600px] mx-auto p-4 pb-60 flex items-center justify-start flex-col gap-4",
    styles,
  ]}
>
  {
    title !== "" && (
      <header class="w-full flex justify-center items-start flex-col">
        <h2 class="text-4xl text-purple-900 font-bold flex items-center gap-2">
          <slot name="icon" />

          {title}
        </h2>
        {subtitle !== "" && (
          <h3 class="text-4xl text-purple-700">{subtitle}</h3>
        )}
      </header>
    )
  }

  <div class="w-full flex justify-center">
    <slot />
  </div>
</section>
