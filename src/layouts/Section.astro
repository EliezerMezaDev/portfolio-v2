---
const { title, subtitle = "" } = Astro.props;
---

<section
  class="max-w-[1280px] w-full min-h-[600px] mx-auto p-4 flex items-center justify-start flex-col gap-4"
>
  {
    title !== "" && (
      <header class="w-full flex justify-center items-center flex-col">
        <h2 class="text-6xl text-purple-900 font-bold">{title}</h2>
        {subtitle !== "" && <h3 class="text-4xl text-purple-700">asd</h3>}
      </header>
    )
  }

  <div class="w-full p-4 flex justify-center">
    <slot />
  </div>
</section>
