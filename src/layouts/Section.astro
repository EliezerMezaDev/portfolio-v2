---
interface Props {
  title?: string;
  subtitle?: string;
  styles?: string;
}

const { title, subtitle = "", styles = "" } = Astro.props;
---

<section
  class:list={[
    "container max-w-[1280px] w-full min-h-[600px] mx-auto p-4 flex items-center justify-start flex-col gap-4",
    styles,
  ]}
>
  {
    title !== "" && (
      <header class="w-full flex justify-center items-start flex-col">
        <h2 class="text-4xl text-purple-900 font-bold flex items-center gap-2">
          <slot name="icon" />

          {title}
        </h2>
        {subtitle !== "" && <h3 class="text-4xl text-purple-700">asd</h3>}
      </header>
    )
  }

  <div class="w-full p-4 flex justify-center">
    <slot />
  </div>
</section>
